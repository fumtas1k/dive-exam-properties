<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2>
      <%= pluralize(property.errors.count, t(".error")) %>
      <%= t ".error_message" %>
      </h2>

      <ul>
        <% property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :rent %>
    <%= form.number_field :rent %>
    <%= t ".yen" %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
    <%= t ".years" %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note %>
  </div>

  <hr>

  <%= form.fields_for :nearest_stations do |fields| %>
    <h2><%= "#{t('activerecord.models.nearest_station')}#{fields.index + 1}" %></h2>
    <div class="field">
      <%= fields.label :line_name %>
      <%= fields.text_field :line_name %>
    </div>

    <div class="field">
      <%= fields.label :name %>
      <%= fields.text_field :name %>
    </div>

    <div class="field">
      <%= fields.label :walking_time %>
      <%= fields.number_field :walking_time %>
      <%= t ".minutes" %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
